<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    tools:context=".ui.incorporate.IncorpFragment">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <!-- Contenido de tu diseÃ±o -->

            <EditText
                android:id="@+id/ubicacions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#2196F3"
                android:ems="10"
                android:enabled="false"
                android:hint="Formulario de Incorporacion"
                android:inputType="textPersonName"
                android:textColor="#EDE7E7"
                android:textColorHint="#EFE8E8"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/nombrepost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nombre"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiene Experiencia"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/tipopost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:entries="@array/selec_post"
                android:prompt="@string/seleccionarpost" />

            <EditText
                android:id="@+id/telefonopost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Telefono"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/ciudadpost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Ciudad"
                android:inputType="textPersonName" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFechaNacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Seleccionar Fecha de Nacimiento"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <ImageButton
                android:id="@+id/btn_registrar"
                android:layout_width="115dp"
                android:layout_height="95dp"
                android:layout_marginHorizontal="120dp"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/regs" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>